<Application
    x:Class="KanbanBoardUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KanbanBoardUWP"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <AcrylicBrush
                x:Key="RegionBrush"
                BackgroundSource="HostBackdrop"
                FallbackColor="#1e2328"
                TintColor="#1e2328"
                TintOpacity="0.8" />
            <!--  Added to override content dialog overlay background to transparent  -->
            <SolidColorBrush x:Key="SystemControlPageBackgroundMediumAltMediumBrush" Color="#00000000" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
